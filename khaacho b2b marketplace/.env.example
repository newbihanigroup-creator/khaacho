# Environment Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/khaacho
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=10

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# AI Services
AI_AGENT_PRIMARY=openai
AI_AGENT_FALLBACK=local
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4

# External Services
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json
GOOGLE_CLOUD_PROJECT=

# AWS (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_AI_PARSING=true
FEATURE_RISK_ASSESSMENT=true
FEATURE_PRICE_INTELLIGENCE=true
FEATURE_BACKGROUND_JOBS=true

# Worker Configuration
WORKER_CONCURRENCY_ORDER=10
WORKER_CONCURRENCY_AI=5
WORKER_CONCURRENCY_RISK=10
WORKER_CONCURRENCY_ROUTING=20
WORKER_CONCURRENCY_NOTIFICATION=10
