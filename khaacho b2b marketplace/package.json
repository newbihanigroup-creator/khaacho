{
  "name": "khaacho-platform",
  "version": "1.0.0",
  "description": "B2B ordering and credit platform for Surkhet, Nepal",
  "main": "src/server.js",
  "scripts": {
    "start": "node scripts/db-deploy.js && node src/server.js",
    "start:web": "node scripts/db-deploy.js && node src/server-web.js",
    "start:worker": "node scripts/db-deploy.js && node src/server-worker.js",
    "build": "npx prisma generate && npx prisma migrate deploy",
    "postinstall": "prisma generate",
    "dev": "node scripts/db-init.js && nodemon src/server.js",
    "dev:web": "node scripts/db-init.js && nodemon src/server-web.js",
    "dev:worker": "node scripts/db-init.js && nodemon src/server-worker.js",
    "db:init": "node scripts/db-init.js",
    "db:deploy": "node scripts/db-deploy.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:verify": "node scripts/verify-migrations.js",
    "db:generate": "prisma generate",
    "db:seed": "node src/database/seed.js",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "validate": "node scripts/validate-startup.js",
    "test": "echo \"Tests not yet implemented\" && exit 0",
    "lint": "echo \"Linting not yet configured\" && exit 0"
  },
  "keywords": [
    "b2b",
    "ordering",
    "credit",
    "whatsapp",
    "nepal"
  ],
  "author": "Khaacho Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/vision": "^5.3.4",
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.18.0",
    "prisma": "^5.22.0",
    "sharp": "^0.33.2",
    "twilio": "^4.23.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
